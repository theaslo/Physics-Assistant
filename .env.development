# Development Environment Variables for Physics Assistant Platform

# Database Passwords (Weak passwords for development only)
POSTGRES_PASSWORD=dev_postgres_password
PHYSICS_DB_PASSWORD=dev_physics_password
MONITOR_DB_PASSWORD=dev_monitor_password
NEO4J_PASSWORD=dev_neo4j_password

# Redis Configuration
REDIS_PASSWORD=dev_redis_password

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=dev_admin_password

# Security Keys (Development only - not for production!)
SECRET_KEY=dev-secret-key-not-for-production
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production

# API Configuration
API_HOST=0.0.0.0
DATABASE_API_PORT=8001
DASHBOARD_API_PORT=8002
PHYSICS_API_PORT=8000

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Analytics Configuration
ML_MODEL_PATH=/app/models
CELERY_WORKER_CONCURRENCY=2

# Security Configuration (Relaxed for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8501
CSRF_SECRET_KEY=dev-csrf-secret-key

# Development Features
DEBUG=true
HOT_RELOAD=true
AUTO_RELOAD=true

# Resource Limits (Lower for development)
MAX_UPLOAD_SIZE=50MB
REQUEST_TIMEOUT=60
WORKER_TIMEOUT=120